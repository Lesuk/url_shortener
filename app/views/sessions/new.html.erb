<div class="row">
  <h1>Log in</h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= render 'login_fields', f: f %>
      <%= f.submit "Log in", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>